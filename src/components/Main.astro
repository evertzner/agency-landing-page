---
import ArrowDown from '../icons/ArrowDown.astro';
import Facebook from '../icons/Facebook.astro';
import Hamburger from '../icons/Hamburger.astro';
import Instagram from '../icons/Instagram.astro';
import Logo from '../icons/Logo.astro';
import LogoFooter from '../icons/LogoFooter.astro';
import Pinterest from '../icons/Pinterest.astro';
import Twitter from '../icons/Twitter.astro';
---

<script>
  const nav = document.querySelector('nav') as HTMLElement;
  const toggleNav = () => {
    if (nav.classList.contains('hidden')) {
      nav.classList.remove('hidden');
    } else {
      nav.classList.add('hidden');
    }
  };

  document.querySelector('#hamburger')?.addEventListener('click', () => {
    toggleNav();
  });
</script>

<main class='h-full grid grid-cols-1 auto-rows-auto min-w-[375px]'>
  <div
    class={`flex flex-col pb-32 justify-between relative py-[34px] aspect-[375/538] md:aspect-[9/5] px-12 bg-[url('/mobile/image-header.jpg')] md:bg-[url('/desktop/image-header.jpg')] bg-cover bg-center`}
  >
    <div class='flex items-center justify-between relative'>
      <Logo />
      <Hamburger />
      <nav
        class='flex md:flex gap-8 md:gap-12 items-center pb-10 md:pb-0 pt-16 md:pt-0 absolute md:relative flex-col md:flex-row
        top-12 left-1/2 md:top-0 md:left-0 bg-white md:bg-transparent -translate-x-1/2 md:translate-x-0
        w-full md:w-auto [clip-path:polygon(0%_7%,95%_7%,100%_0%,100%_100%,0%_100%)] md:[clip-path:unset]'
      >
        <a
          href='#'
          class='text-stone-600 md:text-white text-xl md:text-lg font-semibold leading-[25px] tracking-[-0.143px] md:tracking-custom'
          >About</a
        >
        <a
          href='#'
          class='text-stone-600 md:text-white text-xl md:text-lg font-semibold leading-[25px] tracking-[-0.143px] md:tracking-custom'
          >Services</a
        >
        <a
          href='#'
          class='text-stone-600 md:text-white text-xl md:text-lg font-semibold leading-[25px] tracking-[-0.143px] md:tracking-custom'
          >Projects</a
        >
        <a
          href='#'
          class='font-fraunces text-stone-950 font-bold uppercase text-[15px] leading-[25px] tracking-[-0.107px] bg-yellow-400 md:bg-white py-4 px-8 rounded-full transition-all md:hover:text-white md:hover:bg-opacity-25'
          >Contact</a
        >
      </nav>
    </div>
    <h1
      class='text-center font-fraunces font-black text-[40px] mt-7 text-white uppercase leading-normal tracking-[6.25px]'
    >
      We are creatives
    </h1>
    <ArrowDown />
  </div>
  <div class='flex flex-col md:grid md:grid-cols-2'>
    <picture class='col-start-2 col-end-3 row-start-1 row-end-2'>
      <source media='(max-width: 767px)' srcset='/mobile/image-transform.jpg' />
      <source media='(min-width: 768px)' srcset='/desktop/image-transform.jpg' />
      <img class='w-full' src='/mobile/image-transform.jpg' alt='Transform' />
    </picture>
    <div
      class='px-6 py-16 flex flex-col md:justify-center xl:pl-40 xl:pr-20 col-start-1 col-end-2 row-start-1 row-end-2'
    >
      <h2
        class='font-fraunces text-[32px] md:text-2xl lg:text-[40px] md:leading-tight font-black tracking-[-0.229px] mb-6 md:mb-5 lg:mb-8 text-center md:text-left text-stone-950'
      >
        Transform your brand
      </h2>
      <p
        class='text-stone-600 text-center md:text-left text-lg md:text-sm lg:text-lg font-semibold leading-[30px] tracking-custom mb-8 md:mb-7 lg:mb-10'
      >
        We are a full-service creative agency specializing in helping brands grow fast. Engage your
        clients through compelling visuals that do most of the marketing for you.
      </p>
      <div class='self-center md:self-start relative px-2'>
